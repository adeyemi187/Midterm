<% include ../partials/header.ejs %>




<div class="container">
    <div class="row">
        <div class="offest-md-2 col-md-8">
            <h1><%= title%></h1>
            
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="TitleTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="TitleTextField"
                    placeholder="Enter the Book Title"
                    name="Title"
                    value="<%= books.Title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="DescriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="DescriptionTextField"
                    placeholder="Enter Description of book"
                    name="Description" 
                    value="<%= books.Description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="PriceTextField">Price</label>
                    <input type="number" class="form-control"
                    id="PriceTextField"
                    placeholder="Enter Price"
                    name="Price"
                    value="<%= books.Price %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="AuthorTextField">Author</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter Author's name"
                    name="Author"
                    value="<%= books.Author%>"
                    required>
               </div>

                <div class="form-group">
                    <label for="GenreTextField">Genre</label>
                    <input type="text" class="form-control"
                    id="GenreTextField"
                    placeholder="Enter Genre"
                    name="Genre" 
                    value="<%= books.Genre %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>






<% include ../partials/footer.ejs %>